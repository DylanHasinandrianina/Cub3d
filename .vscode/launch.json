{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug cub3d",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cub3d",
			"args": [
				"src/maps/valid_map.cub"
			],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Build cub3d with make"
		}
	]
}